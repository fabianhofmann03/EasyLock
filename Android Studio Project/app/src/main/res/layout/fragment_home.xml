<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/background"
    tools:context=".ui.home.HomeFragment">

    <EditText
        android:id="@+id/password_input_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="368dp"
        android:ems="10"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:textColor="?attr/actionMenuTextColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/btn_open"
        android:layout_width="180dp"
        android:layout_height="190dp"
        android:layout_marginTop="100dp"
        android:stateListAnimator="@null"
        app:cornerRadius="90dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/Enter_Password_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="12dp"
        android:text="@string/text_password"
        android:textColor="?attr/actionMenuTextColor"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/password_input_home"
        app:layout_constraintStart_toStartOf="@+id/password_input_home" />

    <ImageView
        android:id="@+id/lock_view"
        android:layout_width="155dp"
        android:layout_height="155dp"
        android:backgroundTint="?attr/background"
        android:backgroundTintMode="src_atop"
        app:layout_constraintBottom_toBottomOf="@+id/btn_open"
        app:layout_constraintEnd_toEndOf="@+id/btn_open"
        app:layout_constraintStart_toStartOf="@+id/btn_open"
        app:layout_constraintTop_toTopOf="@+id/btn_open" />

</androidx.constraintlayout.widget.ConstraintLayout>